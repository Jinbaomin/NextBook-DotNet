@model IEnumerable<Product>

<div class="container py-5">
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product-card h-100">
                    <div class="card-inner">
                        <div class="card-front">
                            @if (product.ImageUrl != null)
                            {
                                <img src="@product.ImageUrl" class="product-img" alt="@product.Title" />
                            }
                            else
                            {
                                <img src="https://placehold.co/500x600/png" class="product-img" alt="Product placeholder" />
                            }

                            @if (product.ListPrice > product.Price100)
                            {
                                <div class="discount-badge">
                                    <span>@(Math.Round((1 - product.Price100 / product.ListPrice) * 100))%</span>
                                    <span>OFF</span>
                                </div>
                            }

                            <div class="product-info">
                                <h5 class="product-title">@product.Title</h5>
                                <p class="product-author">by <span>@product.Author</span></p>

                                <div class="price-container">
                                    @if (product.ListPrice > product.Price100)
                                    {
                                        <p class="old-price">
                                            <span>@product.ListPrice.ToString("c")</span>
                                        </p>
                                    }
                                    <p class="current-price">@product.Price100.ToString("c")</p>
                                </div>

                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-productId="@product.ID" class="btn-details">
                                        <span>View Details</span>
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                    <button class="btn-wishlist" title="Add to wishlist">
                                        <i class="bi bi-heart"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="hover-overlay"></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Modern Product Card Styling */
    .product-card {
        perspective: 1000px;
        position: relative;
        border-radius: 16px;
        overflow: visible;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .product-card:hover .card-inner {
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
        transform: translateY(-10px);
    }

    .card-front {
        position: relative;
        width: 100%;
        height: 100%;
        background: linear-gradient(145deg, #ffffff, #f5f5f5);
        border-radius: 16px;
        overflow: hidden;
    }

    .product-img {
        width: 100%;
        height: 280px;
        object-fit: cover;
        transition: all 0.5s ease;
        border-radius: 12px 12px 0 0;
    }

    .product-card:hover .product-img {
        transform: scale(1.05);
    }

    .discount-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background: linear-gradient(135deg, #ff6b6b, #ff4757);
        color: white;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-weight: 700;
        font-size: 0.9rem;
        line-height: 1;
        box-shadow: 0 4px 15px rgba(255, 71, 87, 0.4);
        animation: pulse 2s infinite;
    }

        .discount-badge span:first-child {
            font-size: 1.2rem;
        }

    .product-info {
        padding: 20px;
        position: relative;
        z-index: 2;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 0 0 16px 16px;
        transition: all 0.3s ease;
    }

    .product-title {
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 8px;
        color: #333;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .product-author {
        color: #777;
        font-size: 0.9rem;
        margin-bottom: 15px;
    }

        .product-author span {
            color: #555;
            font-weight: 600;
        }

    .price-container {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 15px;
    }

    .old-price {
        margin: 0;
        font-size: 0.9rem;
        color: #999;
    }

        .old-price span {
            text-decoration: line-through;
            position: relative;
        }

            .old-price span:after {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                width: 100%;
                height: 2px;
                background-color: #ff6b6b;
                transform: rotate(-8deg);
            }

    .current-price {
        margin: 0;
        font-size: 1.4rem;
        font-weight: 700;
        color: #2e86de;
        text-shadow: 0 2px 10px rgba(46, 134, 222, 0.2);
    }

    .action-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }

    .btn-details {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        background: linear-gradient(135deg, #2e86de, #54a0ff);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
        flex-grow: 1;
        box-shadow: 0 4px 15px rgba(46, 134, 222, 0.3);
    }

        .btn-details:hover {
            background: linear-gradient(135deg, #54a0ff, #2e86de);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(46, 134, 222, 0.4);
            color: white;
        }

        .btn-details i {
            transition: transform 0.3s ease;
        }

        .btn-details:hover i {
            transform: translateX(5px);
        }

    .btn-wishlist {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: white;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: #777;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .btn-wishlist:hover {
            background: #ff6b6b;
            color: white;
            transform: scale(1.1);
            box-shadow: 0 6px 15px rgba(255, 107, 107, 0.4);
        }

    .hover-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.4) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
    }

    .product-card:hover .hover-overlay {
        opacity: 1;
    }

    /* Staggered animation for cards */
    .col-lg-3:nth-child(odd) .product-card {
        animation: fadeInUp 0.5s ease backwards;
    }

    .col-lg-3:nth-child(even) .product-card {
        animation: fadeInUp 0.5s 0.2s ease backwards;
    }
</style>