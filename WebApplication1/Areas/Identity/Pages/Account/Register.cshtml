@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-11">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary bg-gradient py-4">
                    <div class="text-center">
                        <h2 class="fw-bold text-white mb-0">
                            <i class="bi bi-person-plus-fill me-2"></i>Create Account
                        </h2>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="text-center mb-4">
                            <h4 class="text-secondary fw-normal">
                                <i class="bi bi-pencil-square me-2"></i>Fill in your details
                            </h4>
                            <div class="border-bottom mt-3"></div>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Account Information Section -->
                        <div class="card mb-4 border-0 bg-light">
                            <div class="card-header bg-light">
                                <h5 class="mb-0 text-primary">
                                    <i class="bi bi-person-badge me-2"></i>Account Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                                   aria-required="true" placeholder="name@example.com" />
                                            <label asp-for="Input.Email" class="text-muted">
                                                <i class="bi bi-envelope-fill me-1"></i>Email
                                            </label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.Name" class="form-control" placeholder="Your Name" />
                                            <label asp-for="Input.Name" class="text-muted">
                                                <i class="bi bi-person-fill me-1"></i>Name
                                            </label>
                                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" />
                                            <label asp-for="Input.PhoneNumber" class="text-muted">
                                                <i class="bi bi-telephone-fill me-1"></i>Phone Number
                                            </label>
                                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Password Section -->
                        <div class="card mb-4 border-0 bg-light">
                            <div class="card-header bg-light">
                                <h5 class="mb-0 text-primary">
                                    <i class="bi bi-shield-lock-fill me-2"></i>Security
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password"
                                                   aria-required="true" placeholder="password" />
                                            <label asp-for="Input.Password" class="text-muted">
                                                <i class="bi bi-key-fill me-1"></i>Password
                                            </label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password"
                                                   aria-required="true" placeholder="password" />
                                            <label asp-for="Input.ConfirmPassword" class="text-muted">
                                                <i class="bi bi-check-circle-fill me-1"></i>Confirm Password
                                            </label>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Address Section -->
                        <div class="card mb-4 border-0 bg-light">
                            <div class="card-header bg-light">
                                <h5 class="mb-0 text-primary">
                                    <i class="bi bi-geo-alt-fill me-2"></i>Address Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.StreetAddress" class="form-control" placeholder="Street Address" />
                                            <label asp-for="Input.StreetAddress" class="text-muted">
                                                <i class="bi bi-signpost-fill me-1"></i>Street Address
                                            </label>
                                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.City" class="form-control" placeholder="City" />
                                            <label asp-for="Input.City" class="text-muted">
                                                <i class="bi bi-building-fill me-1"></i>City
                                            </label>
                                            <span asp-validation-for="Input.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.State" class="form-control" placeholder="State" />
                                            <label asp-for="Input.State" class="text-muted">
                                                <i class="bi bi-map-fill me-1"></i>State
                                            </label>
                                            <span asp-validation-for="Input.State" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code" />
                                            <label asp-for="Input.PostalCode" class="text-muted">
                                                <i class="bi bi-mailbox-fill me-1"></i>Postal Code
                                            </label>
                                            <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Role & Company Section -->
                        <div class="card mb-4 border-0 bg-light">
                            <div class="card-header bg-light">
                                <h5 class="mb-0 text-primary">
                                    <i class="bi bi-briefcase-fill me-2"></i>Role Information
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select h-100">
                                                <option disabled selected>--Select Role--</option>
                                            </select>
                                            <label asp-for="Input.Role" class="text-muted">
                                                <i class="bi bi-person-badge-fill me-1"></i>Role
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div id="companyContainer" class="form-floating" style="display:none;">
                                            <select asp-for="Input.CompanyId" asp-items="@Model.Input.CompanyList" class="form-select h-100">
                                                <option disabled selected>--Select Company--</option>
                                            </select>
                                            <label asp-for="Input.CompanyId" class="text-muted">
                                                <i class="bi bi-building-fill me-1"></i>Company
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid gap-2 mb-4">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg py-3 fw-bold">
                                <i class="bi bi-check-circle-fill me-2"></i>Create Account
                            </button>
                        </div>

                        <!-- External Login Section -->
                        <div class="text-center">
                            <div class="position-relative mb-4">
                                <hr class="text-muted">
                                <div class="position-absolute top-50 start-50 translate-middle px-3 bg-white">
                                    <span class="text-muted">Or</span>
                                </div>
                            </div>

                            <h5 class="text-secondary mb-3">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Use another service to register
                            </h5>

                            @{
                                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                {
                                    <div class="alert alert-info d-inline-block mx-auto">
                                        <p class="mb-0">
                                            <i class="bi bi-info-circle me-2"></i>
                                            No external authentication services configured.
                                        </p>
                                        <small>
                                            See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715"
                                                        class="alert-link">article</a> about setting up external services.
                                        </small>
                                    </div>
                                }
                                else
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                                          method="post" class="d-flex justify-content-center gap-2 flex-wrap">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-secondary btn-lg"
                                                    name="provider" value="@provider.Name"
                                                    title="Register using your @provider.DisplayName account">
                                                <i class="bi bi-@GetProviderIcon(provider.Name) me-2"></i>
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </form>
                                }
                            }
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light py-3 text-center">
                    <div class="d-flex justify-content-center align-items-center">
                        <span class="text-muted">Already have an account?</span>
                        <a asp-page="./Login" class="btn btn-link">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetProviderIcon(string providerName)
    {
        return providerName.ToLower() switch
        {
            "google" => "google",
            "facebook" => "facebook",
            "microsoft" => "microsoft",
            "twitter" => "twitter",
            "apple" => "apple",
            "github" => "github",
            _ => "box-arrow-in-right"
        };
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Initial check on page load
            checkRoleSelection();

            // Check when role selection changes
            $('#Input_Role').change(function() {
                checkRoleSelection();
            });

            function checkRoleSelection() {
                var role = $('#Input_Role option:selected').text(); // Get the selected text
                if (role === "Company") {
                    $('#companyContainer').show(); // Show the company selection
                } else {
                    $('#companyContainer').hide(); // Hide the company selection
                }
            }
        });
    </script>
}
