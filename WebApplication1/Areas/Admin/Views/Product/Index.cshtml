@* @model List<Product> *@
@model ProductSearch

<div class="container">
	<div class="col-12">
		<h2 class="text-primary text-center">Product List</h2>
	</div>
	<div class="row pt-4 pb-2">
		<div class="col-6 text-end">
			<form method="post" class="d-flex gap-3">
				<input asp-for="@Model.searchTerm" id="searchInput" class="form-control" placeholder="Search...">
				<button id="searchBtn" type="submit" class="btn btn-primary">Search</button>
			</form>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Add New Product
			</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>ISBN</th>
				<th>Author</th>
				<th>Price</th>
				<th>Category</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.listProduct)
			{
				<tr>
					<td>@obj.Title</td>
					<td>@obj.ISBN</td>
					<td>@obj.Author</td>
					<td>@obj.Price</td>
					<td>@obj.CategoryId</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i> Delete
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

