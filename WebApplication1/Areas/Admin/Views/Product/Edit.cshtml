@using WebApplication1.ViewModels
@model ProductVM

<form method="post" enctype="multipart/form-data">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Product</h2>
			<hr />
		</div>
		<div class="row">
			<div class="col-10">
				<input asp-for="@Model.Product.ID" type="hidden" />
				<div class="mb-3">
					<label asp-for="@Model.Product.Title" class="mb-1"></label>
					<input asp-for="@Model.Product.Title" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.Description" class="mb-1"></label>
					<textarea asp-for="@Model.Product.Description" type="text" class="form-control border-0 shadow"></textarea>
					<span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.ISBN" class="mb-1"></label>
					<input asp-for="@Model.Product.ISBN" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="@Model.Product.ISBN" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.Author" class="mb-1"></label>
					<input asp-for="@Model.Product.Author" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="@Model.Product.Author" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.ListPrice" class="mb-1"></label>
					<input asp-for="@Model.Product.ListPrice" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="@Model.Product.ListPrice" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.Price" class="mb-1"></label>
					<input asp-for="@Model.Product.Price" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.Price50" class="mb-1"></label>
					<input asp-for="@Model.Product.Price50" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="@Model.Product.Price50" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.Price100" class="mb-1"></label>
					<input asp-for="@Model.Product.Price100" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="@Model.Product.Price100" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.CategoryId" class="mb-1"></label>
					<select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" type="text" class="form-select border-0 shadow">
						<option>--Select Category--</option>
					</select>
					<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="@Model.Product.ImageUrl" class="mb-1"></label>
					<input asp-for="@Model.Product.ImageUrl" type="file" name="file" class="form-control border-0 shadow" />
					@* <input asp-for="@Model.Product.ImageUrl" type="text" /> *@
					<input asp-for="@Model.Product.ImageUrl" hidden />
					<span asp-validation-for="@Model.Product.ImageUrl" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-secondary border">Back to category list</a>
					</div>
				</div>
			</div>
			<div class="col-2">
				<img src="@Model.Product.ImageUrl" width="100%" alt="Image"
					style="border-radius: 5px; border: 1px solid #bbb9b9"
				/>
			</div>
		</div>
		
		
	</div>
</form>