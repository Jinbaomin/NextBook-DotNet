@model WebApplication1.ViewModels.ProductVM;

<div>
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" enctype="multipart/form-data">
			<div class="border p-3 mt-4">
				<div class="row pb-2">
					<h2 class="text-primary">Create Product</h2>
					<hr />
				</div>
				<div class="mb-3">
					<label asp-for="Product.Title" class="mb-1"></label>
					<input asp-for="Product.Title" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Title" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.Description" class="mb-1"></label>
					<input asp-for="Product.Description" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Description" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.ISBN" class="mb-1"></label>
					<input asp-for="Product.ISBN" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.ISBN" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.Author" class="mb-1"></label>
					<input asp-for="Product.Author" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Author" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.ListPrice" class="mb-1"></label>
					<input asp-for="Product.ListPrice" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.ListPrice" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.Price" class="mb-1"></label>
					<input asp-for="Product.Price" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Price" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.Price50" class="mb-1"></label>
					<input asp-for="Product.Price50" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Price50" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.Price100" class="mb-1"></label>
					<input asp-for="Product.Price100" type="text" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.Price100" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.CategoryId" class="mb-1"></label>
					<select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" type="text" class="form-select border-0 shadow">
						<option>--Select Category--</option>
					</select>
					<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Product.ImageUrl" class="mb-1"></label>
					<input asp-for="Product.ImageUrl" type="file" class="form-control border-0 shadow" />
					<span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
				</div>
				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-secondary border">Back to category list</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>